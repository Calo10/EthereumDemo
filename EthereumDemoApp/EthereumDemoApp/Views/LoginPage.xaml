<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="EthereumDemoApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout x:Name="stkContainer">
            <!--Logo Image-->
            <StackLayout>
                <Image Source=""/>
            </StackLayout>
            <!--Login Panel-->
            <StackLayout Margin="0,200">
                <StackLayout Margin="50,0">
                    <Label Text="Correo" TextColor="#9b9b9b"/>
                    <Entry Text="{Binding email}" Placeholder="Digitar identificacion"  TextColor="#4a4a4a"/>
                    <Label Text="Token" TextColor="#9b9b9b"/>
                    <Entry Text="{Binding pass}"  Placeholder="Digitar password" TextColor="#4a4a4a" IsPassword="true"/>
                    <Button Text="Login" Command="{Binding LoginCommand}" />
                
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
