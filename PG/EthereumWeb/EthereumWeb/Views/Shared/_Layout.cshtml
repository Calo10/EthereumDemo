@using EthereumWeb.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

  
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Democracia en línea", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (((UserModel)Session["User"]).Profile == 1)
                    {
                        <li>@Html.ActionLink("Administrar Usuarios", "UserList", "User", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Invitar Usuarios a votar", "RegisterUserProposal", "Proceso", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Administrar Propuestas", "ProposalList", "Proposal", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Salir", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>

                    }
                    else if (((UserModel)Session["User"]).Profile == 2)
                    {
                        <li>@Html.ActionLink("Administrar Propuestas", "ProposalList", "Proposal", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Invitar Usuarios a votar", "RegisterUserProposal", "Proceso", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Salir", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                    else
                    {

                        <li>@Html.ActionLink("Administrar Propuestas", "ProposalList", "Proposal", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Salir", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>

                    }
                    
                </ul>
            </div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - #YoAsumo</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/canvasjs")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
